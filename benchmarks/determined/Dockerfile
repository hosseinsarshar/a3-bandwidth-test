RUN pip install trl==0.7.10
RUN pip install scikit-learn==1.4.0
RUN pip install deepspeed==0.10.2
RUN pip install peft==0.8.2
RUN pip install chromadb
RUN pip install medmnist
RUN pip install PyYAML
RUN pip install determined
RUN pip install accelerate>=0.12.0

